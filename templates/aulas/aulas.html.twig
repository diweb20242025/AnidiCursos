{% extends 'base.html.twig' %}

{% block title %}Hello AulasController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/var/www/html/AnidiCursos/src/Controller/AulasController.php</code></li>
        <li>Your template at <code>/var/www/html/AnidiCursos/templates/aulas/index.html.twig</code></li>
    </ul>
</div>

<section class="container mt-5">
    <h2>Listado de Aulas</h2>
    <table class="table table-striped">
        <thead class="table-primary">
            <tr>
                <th>Codigo</th>
                <th>Capacidad</th>
                <th>Adaptado</th>
            </tr>
        </thead>
        <tbody>
            {% for aula in aulas %}
                <tr>
                    <td>{{ aula.codigo }}</td>
                    <td>{{ aula.capacidad }}</td>
                    <td>{{ aula.adaptado? "Si": "No" }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No hay cursos disponibles.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
